  <script>
    // Gender field handling
    const genderSelect = document.getElementById('gender');
    const genderSpecify = document.getElementById('gender-specify');

    genderSelect.addEventListener('change', () => {
      if (genderSelect.value === 'Other') {
        genderSpecify.style.display = 'block';
      } else {
        genderSpecify.style.display = 'none';
        genderSpecify.value = '';
      }
    });

    // Language input handling
    const languageList = document.getElementById('language-list');
    const addLanguageButton = document.querySelector('.add-language');
    const removeLanguageButton = document.querySelector('.remove-language');
    const hiddenLanguages = document.getElementById('languages');
    let languageCount = 1;

    addLanguageButton.addEventListener('click', () => {
      languageCount++;
      const newInputDiv = document.createElement('div');
      newInputDiv.className = 'language-input';
      newInputDiv.innerHTML = `<input type="text" name="language_${languageCount}" placeholder="e.g., Spanish">`;
      languageList.appendChild(newInputDiv);
      removeLanguageButton.disabled = false;
    });

    removeLanguageButton.addEventListener('click', () => {
      if (languageCount > 1) {
        languageList.removeChild(languageList.lastChild);
        languageCount--;
        if (languageCount === 1) {
          removeLanguageButton.disabled = true;
        }
      }
    });

    // Hobby input handling
    const hobbyList = document.getElementById('hobby-list');
    const addHobbyButton = document.querySelector('.add-hobby');
    const removeHobbyButton = document.querySelector('.remove-hobby');
    const hiddenHobbies = document.getElementById('hobbies');
    let hobbyCount = 1;

    addHobbyButton.addEventListener('click', () => {
      hobbyCount++;
      const newInputDiv = document.createElement('div');
      newInputDiv.className = 'hobby-input';
      newInputDiv.innerHTML = `<input type="text" name="hobby_${hobbyCount}" placeholder="e.g., Painting">`;
      hobbyList.appendChild(newInputDiv);
      removeHobbyButton.disabled = false;
    });

    removeHobbyButton.addEventListener('click', () => {
      if (hobbyCount > 1) {
        hobbyList.removeChild(hobbyList.lastChild);
        hobbyCount--;
        if (hobbyCount === 1) {
          removeHobbyButton.disabled = true;
        }
      }
    });

    // Form submission
    const form = document.getElementById('mentee-form');
    const thankYouMessage = document.getElementById('thank-you-message');

    form.addEventListener('submit', (e) => {
      // Concatenate languages
      const languageInputs = languageList.querySelectorAll('input[type="text"]');
      const languages = Array.from(languageInputs)
        .map(input => input.value.trim())
        .filter(value => value !== '')
        .join(',');
      hiddenLanguages.value = languages;

      // Concatenate hobbies
      const hobbyInputs = hobbyList.querySelectorAll('input[type="text"]');
      const hobbies = Array.from(hobbyInputs)
        .map(input => input.value.trim())
        .filter(value => value !== '')
        .join(',');
      hiddenHobbies.value = hobbies;

      // Handle gender specify
      if (genderSelect.value !== 'Other') {
        genderSpecify.value = '';
      }

      // Show thank you message
      thankYouMessage.style.display = 'flex';
      setTimeout(() => {
        thankYouMessage.style.display = 'none';
        form.reset(); // Reset form after submission
      }, 3000);

      // Allow clicking to dismiss message
      thankYouMessage.addEventListener('click', () => {
        thankYouMessage.style.display = 'none';
      });
    });
  </script>
</body>
